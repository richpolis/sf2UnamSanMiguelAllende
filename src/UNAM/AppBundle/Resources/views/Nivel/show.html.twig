{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('niveles')}}"><svg class="glyph stroked upload"><use xlink:href="#stroked-upload"/></svg></a> Niveles </li>
	</ol>
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Nivel</h2>
        </div> 
    <div class="table-responsive">
         <table class="table table-striped ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nivel</th>
                <td>{{ entity.nivel }}</td>
            </tr>
        </tbody>
    </table>

        
        <a  class="btn btn-danger" href="{{ path('niveles') }}">Volver a la lista</a>
    
        <a class="btn  btn-success" href="{{ path('niveles_edit', { 'id': entity.id }) }}"> Editar </a>
   
        <a id="eliminaRegistro" class="btn btn-danger" href="#">Eliminar</a>
        <form id="formEliminar" action="{{ path('niveles_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script>
        (function(){
            $("#eliminaRegistro").on('click',function(){
                $("#formEliminar").submit();
            });
        })();
    </script>
{% endblock %}    