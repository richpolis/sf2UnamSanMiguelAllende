{% extends 'UNAMAppBundle:Default:index.html.twig' %}

{% block panel %}
   
        
    
    
    <div class='col-lg-5 col-lg-offset-3'>
        <h2>Agregar Nuevo Nivel</h2>
        <br>
    {{ form_start(form,{'attr':{'role': 'form'}}) }}
    
    <div class='form-group'>
        {{ form_label(form.nombre) }}
        {{ form_widget(form.nombre ,{ 'attr': {'class' : 'form-control' }} ) }}
        <span class='text-danger'>{{ form_errors(form.nombre)}}</span>
    </div>  
    <br>   
    <div class="col-lg-12">
        {{ form_widget(form.submit, {'label': 'Agregar Nivel' , 'attr': {'class': 'btn btn-primary'}}) }}
        <a class="btn btn-danger" href="{{ path('nivel') }}">
            Ver Lista Completa
        </a>
    </div>
        {{ form_end(form) }}
    
    
    </div>
   

{% endblock %}
