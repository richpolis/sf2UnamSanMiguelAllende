<?xml version="1.0" encoding="UTF-8"?>
<pdf>
    <page page-size="letter-landscape">
        <placeholders>
            <watermark>
                <!-- rotate can have absolute values (45deg - in degrees, 0.123 - in radians) or relative values ("diagonally" and "-diagonally" - angle between diagonal and base side of the page) -->
                <div rotate="360deg" alpha="0.3">
                    <img src="{{ pdf_image('UNAMAppBundle:constancia_alumno.png') }}" height="100%" />
                </div>
            </watermark>
        </placeholders>
        <h1>
           Constancia de estudio - {{alumno.nombreCompleto}}
        </h1>
        <h2>{{curso.nombreCursoCompleto}}</h2>
        <div color="gray" text-align="right" font-size="14px">{{curso.nota|capitalize}}</div>
        <hr/>
        <br/>
    </page>
</pdf>
