{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block content %}
    <h1>Pago list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Descuento</th>
                <th>Precio</th>
                <th>Pago</th>
                <th>Fechapago</th>
                <th>Usuarioregistro</th>
                <th>Usuariopago</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pagos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.descuento }}</td>
                <td>{{ entity.precio }}</td>
                <td>{{ entity.pago }}</td>
                <td>{% if entity.fechaPago %}{{ entity.fechaPago|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.usuarioRegistro }}</td>
                <td>{{ entity.usuarioPago }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pagos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pagos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pagos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
