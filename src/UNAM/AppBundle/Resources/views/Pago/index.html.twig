{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('pagos')}}"><svg class="glyph stroked app window with content"><use xlink:href="#stroked-app-window-with-content"/></svg></a> Pagos </li>
	</ol>
{% endblock %}

{% block content %}
    
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Pagos</h2>
        </div>  
    
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Descuento</th>
                        <th>Pago</th>
                        <th>Fecha Pago</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.stringStatus }}</td>
                        <td>{{ entity.descuento | descuento }}</td>
                        <td>{{ entity.pago | price  }}</td>
                        <td>{{ entity.fechaPago | date('d-m-Y')  }}</td>
                        <td>
                           <a class="btn btn-primary" href="{{ path('pagos_show', { 'id': entity.id }) }}">Ver</a>                               
                           <a class="btn btn-info" href="{{ path('pagos_edit', { 'id': entity.id }) }}">Editar</a>
                           
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    <table class="records_list">
        
       
    </table>

       
        
            <a class="btn btn-success" href="{{ path('pagos_new') }}">
                Agregar Nuevo
            </a>
        
    
                
     </div>           
    {% endblock %}
