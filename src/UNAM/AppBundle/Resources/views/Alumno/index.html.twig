{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Alumno list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellidopadre</th>
                <th>Apellidomadre</th>
                <th>Email</th>
                <th>Domicilio</th>
                <th>Identificacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('alumnos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellidoPadre }}</td>
                <td>{{ entity.apellidoMadre }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.domicilio }}</td>
                <td>{{ entity.identificacion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('alumnos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('alumnos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('alumnos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
