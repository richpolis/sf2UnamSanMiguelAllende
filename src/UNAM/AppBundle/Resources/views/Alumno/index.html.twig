{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block content %}
    
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Alumnos</h2>
        </div>  
    
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>                
                        <th>Identificacion</th>
                        <th>Acciones</th>                       
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>               
                        <td>{{ entity.nombre }}</td>
                        <td>{{ entity.apellidoPadre }}</td>
                        <td>{{ entity.apellidoMadre }}</td>              
                        <td>{{ entity.identificacion }}</td>
                        <td>
                           <a class="btn btn-primary" href="{{ path('alumno_show', { 'id': entity.id }) }}">Ver</a>                               
                           <a class="btn btn-info" href="{{ path('alumno_edit', { 'id': entity.id }) }}">Editar</a>
                           
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                
            </table>
        </div>

    <table class="records_list">
        
       
    </table>

       
        
            <a class="btn btn-success" href="{{ path('alumno_new') }}">
                Agregar Nuevo
            </a>
        
    
                
     </div>           
    {% endblock %}
