{% extends 'UNAMAppBundle::layout.html.twig' %}


{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('alumnos')}}"><svg class="glyph stroked calendar"><use xlink:href="#stroked-calendar"></use></svg></a> Alumnos </li>
	</ol>
{% endblock %}


{% block content %}
    
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Alumnos</h2>
        </div>  
    
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Foto</th>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>                
                        <th>Identificacion</th>
                        <th>Acciones</th>                       
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            <img src="{{ entity.webPath }}" style="max-height: 120px; max-width: 120px;"/>
                        </td>
                        <td>{{ entity.nombre }}</td>
                        <td>{{ entity.apellidoPadre }}</td>
                        <td>{{ entity.apellidoMadre }}</td>              
                        <td>{{ entity.identificacion }}</td>
                        <td>
                           <a class="btn btn-primary" href="{{ path('alumnos_show', { 'id': entity.id }) }}">Ver</a>                               
                           <a class="btn btn-info" href="{{ path('alumnos_edit', { 'id': entity.id }) }}">Editar</a>
                           
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                
            </table>
        </div>

    <table class="records_list">
        
       
    </table>

       
        
            <a class="btn btn-success" href="{{ path('alumnos_new') }}">
                Agregar Nuevo
            </a>
        
    
                
     </div>           
    {% endblock %}
