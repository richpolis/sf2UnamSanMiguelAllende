{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('alumnos')}}"><svg class="glyph stroked calendar"><use xlink:href="#stroked-calendar"></use></svg></a> Alumnos </li>
	</ol>
{% endblock %}


{% block content %}
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Alumno:  &nbsp; {{ entity.nombreCompleto }}</h2>
        </div> 
    <div class="table-responsive">
         <table class="table table-striped ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <td>Foto: </td>
                <td>
                    <img src="{{ entity.webPath }}" style="max-height: 120px; max-width: 120px;"/>
                </td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidopadre</th>
                <td>{{ entity.apellidoPadre }}</td>
            </tr>
            <tr>
                <th>Apellidomadre</th>
                <td>{{ entity.apellidoMadre }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Domicilio</th>
                <td>{{ entity.domicilio }}</td>
            </tr>
            <tr>
                <th>Identificacion</th>
                <td>{{ entity.identificacion }}</td>
            </tr>
        </tbody>
    </table>

        
        <a  class="btn btn-danger" href="{{ path('alumnos') }}">Volver a la lista</a>
    
        <a class="btn  btn-success" href="{{ path('alumnos_edit', { 'id': entity.id }) }}"> Editar </a>
   
        <a id="eliminaRegistro" class="btn btn-danger" href="#">Eliminar</a>
        <form id="formEliminar" action="{{ path('alumnos_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
        </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script>
        (function(){
            $("#eliminaRegistro").on('click',function(e){
                e.preventDefault();
                $("#formEliminar").submit();
            });
        })();
    </script>
{% endblock %}    