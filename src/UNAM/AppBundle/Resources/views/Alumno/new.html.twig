{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('alumnos')}}"><svg class="glyph stroked calendar"><use xlink:href="#stroked-calendar"></use></svg></a> Alumnos </li>
	</ol>
{% endblock %}

{% block stylesheets %}
    {{parent()}}
    
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    
{% endblock %}

{% block content -%}
    <div class='col-lg-5 col-lg-offset-3'>
        <h2>Agregar Nuevo Alumno</h2>
        <br>
    {{ form_start(form,{'attr':{'role': 'form'}}) }}
    <div class='form-group'>
        {{ form_label(form.identificacion) }}
        {{ form_widget(form.identificacion ,{ 'attr': {'class' : 'form-control' }} ) }}
        <span class='text-danger'>{{ form_errors(form.identificacion)}}</span>
    </div> 
    
    <div class='form-group'>
        {{ form_label(form.nombre) }}
        {{ form_widget(form.nombre ,{ 'attr': {'class' : 'form-control' }} ) }}
        <span class='text-danger'>{{ form_errors(form.nombre)}}</span>
    </div>
    
     <div class='form-group'>
        {{ form_label(form.apellidoPadre) }}
        {{ form_widget(form.apellidoPadre ,{ 'attr': {'class' : 'form-control' }} ) }}
        <span class='text-danger'>{{ form_errors(form.apellidoPadre)}}</span>
    </div> 
    
    <div class='form-group'>
        {{ form_label(form.apellidoMadre) }}
        {{ form_widget(form.apellidoMadre ,{ 'attr': {'class' : 'form-control' }} ) }}
        <span class='text-danger'>{{ form_errors(form.apellidoMadre)}}</span>
    </div>
    
    <div class='form-group'>
            {{ form_label(form.file) }}
            {{ form_widget(form.file ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.file)}}</span>
        </div>
    
    <div class='form-group'>
        {{ form_label(form.email) }}
        {{ form_widget(form.email ,{ 'attr': {'class' : 'form-control'}} ) }}
        <span class='text-danger'>{{ form_errors(form.email)}}</span>
    </div>
    
    <div class='form-group'>
        {{ form_label(form.telefono) }}
        {{ form_widget(form.telefono ,{ 'attr': {'class' : 'form-control'}} ) }}
        <span class='text-danger'>{{ form_errors(form.telefono)}}</span>
    </div>
    
    <div class='form-group'>
            {{ form_label(form.fechaInscripcion) }}
            {{ form_widget(form.fechaInscripcion ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.fechaInscripcion)}}</span>
    </div>
    
    <div class='form-group'>
            {{ form_label(form.isBeca) }}
            {{ form_widget(form.isBeca ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.isBeca)}}</span>
    </div>
    
    <div class='form-group'>
            {{ form_label(form.ocupacion) }}
            {{ form_widget(form.ocupacion ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.ocupacion)}}</span>
    </div>
    
    <div class='form-group'>
            {{ form_label(form.comoSeEntero) }}
            {{ form_widget(form.comoSeEntero ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.comoSeEntero)}}</span>
    </div>
    
    <div class='form-group'>
        {{ form_label(form.domicilio) }}
        {{ form_widget(form.domicilio ,{ 'attr': {'class' : 'form-control' }} ) }}
        <span class='text-danger'>{{ form_errors(form.domicilio)}}</span>
    </div>
     
    <br>   
    <div class="col-lg-12">
        {{ form_widget(form.submit, {'label': 'Agregar Alumno' , 'attr': {'class': 'btn btn-primary'}}) }}
        <a class="btn btn-danger" href="{{ path('alumnos') }}">
            Ver Lista Completa
        </a>
    </div>            
        {{ form_end(form) }}
        
        
    
    </div>
   

{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="{{ asset('bundles/unamapp/js/bootstrap-datepicker.js') }}"></script>
    <script type="text/javascript">
      var ocupaciones = [
          {% for ocupacion in ocupaciones %}
             '{{ocupacion | upper}}'     
            {% if loop.index != loop.last %} , {% endif %} 
          {% endfor %}
      ];
      
      var como_se_enteros = [
          {% for ocupacion in como_se_enteros %}
             '{{ocupacion | upper}}'     
            {% if loop.index != loop.last %} , {% endif %} 
          {% endfor %}
      ];
        
      (function(){
            $('#unam_appbundle_alumno_fechaInscripcion').datepicker({
                format: 'yyyy-mm-dd'
            });
            $('#unam_appbundle_alumno_ocupacion').autocomplete({
                source: ocupaciones
            });
            $('#unam_appbundle_alumno_comoSeEntero').autocomplete({
                source: como_se_enteros
            });
      })();
    </script>
{% endblock %}