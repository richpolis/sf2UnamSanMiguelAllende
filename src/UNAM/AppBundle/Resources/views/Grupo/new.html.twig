{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block content -%}
   
        
    
    
    <div class='col-lg-5 col-lg-offset-3'>
        <h2>Agregar Nuevo Grupo</h2>
        <br>
    {{ form_start(form,{'attr':{'role': 'form'}}) }}
    
    <div class='form-group'>
            {{ form_label(form.grupo) }}
            {{ form_widget(form.grupo ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.grupo)}}</span>
        </div>

        <div class='form-group'>
            {{ form_label(form.fechaInicio) }}
            {{ form_widget(form.fechaInicio ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.fechaInicio)}}</span>
        </div> 

        <div class='form-group'>
            {{ form_label(form.fechaFin) }}
            {{ form_widget(form.fechaFin ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.fechaFin)}}</span>
        </div>
        
        <div class='form-group'>
            {{ form_label(form.descripcion) }}
            {{ form_widget(form.descripcion ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.descripcion)}}</span>
        </div> 
        <div class='form-group'>
            {{ form_label(form.horario) }}
            {{ form_widget(form.horario ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.horario)}}</span>
        </div> 
        <div class='form-group'>
            {{ form_label(form.maestro) }}
            {{ form_widget(form.maestro ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.maestro)}}</span>
        </div> 

        <br>
    <div class="col-lg-12">
        {{ form_widget(form.submit, {'label': 'Agregar curso' , 'attr': {'class': 'btn btn-primary'}}) }}
        <a class="btn btn-danger" href="{{ path('cursos') }}">
            Ver Lista Completa
        </a>
    </div>            
        {{ form_end(form) }}
        
        
    
    </div>
   

{% endblock %}
