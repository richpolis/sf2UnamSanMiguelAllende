{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('grupos')}}"><svg class="glyph stroked table"><use xlink:href="#stroked-table"/></svg></a> Grupos </li>
	</ol>
{% endblock %}

{% block content %}
    
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Grupos</h2>
        </div>  
    
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Grupo</th>
                        <th>Inicio</th>
                        <th>Fin</th>
                        <th>Horario</th>
                        <th>Curso</th>
                        <th>Maestro</th>
                        <th>Acciones</th>                       
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.grupo }}</td>
                        <td>{{ entity.fechaInicio | date('d-m-Y')  }}</td>
                        <td>{{ entity.fechaFin | date('d-m-Y')  }}</td>
                        <td>{{ entity.horario }}</td>              
                        <td>{{ entity.curso }}</td>
                        <td>{{ entity.maestro }}</td>
                        <td>
                           <a class="btn btn-primary" href="{{ path('grupos_show', { 'id': entity.id }) }}">Ver</a>                               
                           <a class="btn btn-info" href="{{ path('grupos_edit', { 'id': entity.id }) }}">Editar</a>
                           
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                
            </table>
        </div>

    <table class="records_list">
        
       
    </table>

       
        
            <a class="btn btn-success" href="{{ path('grupos_new') }}">
                Agregar Nuevo
            </a>
        
    
                
     </div>           
    {% endblock %}
