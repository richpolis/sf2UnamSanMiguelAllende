{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block content %}
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Grupo:  &nbsp; {{ entity.grupo }}</h2>
        </div>
    <div class="table-responsive">
         <table class="table table-striped ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Grupo</th>
                <td>{{ entity.grupo }}</td>
            </tr>
            <tr>
                <th>Fecha Inicio</th>
                <td>{{ entity.fechaInicio | date('d-m-Y')  }}</td>
            </tr>
            <tr>
                <th>Fecha Fin</th>
                <td>{{ entity.fechaFin | date('d-m-Y')  }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Horario</th>
                <td>{{ entity.horario }}</td>
            </tr>
            <tr>
                <th>Maestro</th>
                <td>{{ entity.maestro }}</td>
            </tr>
        </tbody>
    </table>

        
        <a  class="btn btn-danger" href="{{ path('grupos') }}">Volver a la lista</a>
    
        <a class="btn  btn-success" href="{{ path('grupos_edit', { 'id': entity.id }) }}"> Editar </a>
   
        {{ form_widget(delete_form.submit, {'label': 'Eliminar' , 'attr': {'class': 'btn btn-danger'}}) }}   

    
    </div>
    </div>
{% endblock %}
