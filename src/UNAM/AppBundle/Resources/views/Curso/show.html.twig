{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('cursos')}}"><svg class="glyph stroked clipboard with paper"><use xlink:href="#stroked-clipboard-with-paper"/></svg></a> Cursos </li>
	</ol>
{% endblock %}


{% block content %}
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Curso:  &nbsp; {{ entity.nombreCurso }}</h2>
        </div> 
    <div class="table-responsive">
         <table class="table table-striped ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Curso</th>
                <td>{{ entity.nombreCurso }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ entity.nota }}</td>
            </tr>
            <tr>
                <th>Es Ingles?</th>
                <td>{{ entity.isIngles | isBool | raw }}</td>
            </tr>
            <tr>
                <th>Nivel</th>
                <td>{{ entity.nivel }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ entity.precio.precio | price }}</td>
            </tr>
        </tbody>
    </table>

        
        <a  class="btn btn-danger" href="{{ path('cursos') }}">Volver a la lista</a>
    
        <a class="btn  btn-success" href="{{ path('cursos_edit', { 'id': entity.id }) }}"> Editar </a>
   
        {{ form_widget(delete_form.submit, {'label': 'Eliminar' , 'attr': {'class': 'btn btn-danger'}}) }}   

    
    </div>
    </div>
{% endblock %}
