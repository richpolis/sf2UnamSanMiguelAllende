{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('cursos')}}"><svg class="glyph stroked clipboard with paper"><use xlink:href="#stroked-clipboard-with-paper"/></svg></a> Cursos </li>
	</ol>
{% endblock %}

{% block content -%}
    <div class='col-lg-5 col-lg-offset-3'>
        <h2>Editar curso: {{entity.nombreCursoCompleto}} </h2>
        <br>
        {{ form_start(edit_form,{'attr':{'role': 'form'}}) }}
        <div class='form-group'>
            {{ form_label(edit_form.nombreCurso) }}
            {{ form_widget(edit_form.nombreCurso ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.nombreCurso)}}</span>
        </div>

        <div class='form-group'>
            {{ form_label(edit_form.nota) }}
            {{ form_widget(edit_form.nota ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.nota)}}</span>
        </div> 

        <div class='form-group'>
            {{ form_label(edit_form.isIngles) }}
            {{ form_widget(edit_form.isIngles ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.isIngles)}}</span>
        </div>
        
        <div class='form-group'>
            {{ form_label(edit_form.nivel) }}
            {{ form_widget(edit_form.nivel ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.nivel)}}</span>
        </div> 
        <div class='form-group'>
            {{ form_label(edit_form.precio) }}
            {{ form_widget(edit_form.precio ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.precio)}}</span>
        </div> 

        <br/>
        <div class="col-lg-12">
            {{ form_widget(edit_form.submit, {'label': 'Actualizar curso' , 'attr': {'class': 'btn btn-primary'}}) }}
            <a class="btn btn-success" href="{{ path('cursos') }}">
                Ver Lista Completa
            </a>
            <button id="eliminaRegistro" class="btn btn-danger">
                Eliminar
            </button>   
        </div>
        {{ form_end(edit_form) }}
        <form id="formEliminar" action="{{ path('cursos_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        </form>
    </div>
    <br>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script>
        (function(){
            $("#eliminaRegistro").on('click',function(){
                $("#formEliminar").submit();
            });
        })();
    </script>
{% endblock %}    

