{% extends 'UNAMAppBundle:Default:index.html.twig' %}

{% block panel -%}
   
        
    
    
    <div class='col-lg-5 col-lg-offset-3'>
        <h2>Asignacion de Nota</h2>
        <br>
    {{ form_start(form,{'attr':{'role': 'form'}}) }}
    
    <div class='form-group'>
        {{ form_label(form.nota) }}
        {{ form_widget(form.nota ,{ 'attr': {'class' : 'form-control' }} ) }}
        <span class='text-danger'>{{ form_errors(form.nota)}}</span>
    </div>
    
     <div class='form-group'>
        {{ form_label(form.grupo) }}
        {{ form_widget(form.grupo ,{ 'attr': {'class' : 'form-control' }} ) }}
        <span class='text-danger'>{{ form_errors(form.grupo)}}</span>
    </div> 
    
     
    <br>   
    <div class="col-lg-12">
        {{ form_widget(form.submit, {'label': 'Agregar Nota al Registro' , 'attr': {'class': 'btn btn-primary'}}) }}
        
    </div>   
        
        {{ form_end(form) }}
        
        {{ entity.alumno }}
    
    </div>
   

{% endblock %}
