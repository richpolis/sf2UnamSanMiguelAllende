{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block content %}
    <h1>Curso list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombrecurso</th>
                <th>Nota</th>
                <th>Isingles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cursos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreCurso }}</td>
                <td>{{ entity.nota }}</td>
                <td>{{ entity.isIngles }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cursos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cursos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cursos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
