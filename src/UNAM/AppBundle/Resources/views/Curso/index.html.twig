{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lista de cursos</h1>

    <table class="records_list">
        <thead>
            <tr>

                <th>Nota</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
                <td>{{ entity.nota }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('curso_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('curso_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('curso_new') }}">
                Crear nuevo
            </a>
        </li>
    </ul>
    {% endblock %}
