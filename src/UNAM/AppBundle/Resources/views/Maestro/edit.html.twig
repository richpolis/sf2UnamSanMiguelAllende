{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('maestros')}}"><svg class="glyph stroked female user"><use xlink:href="#stroked-female-user"/></svg></a> Maestros </li>
	</ol>
{% endblock %}


{% block content -%}
    <div class='col-lg-5 col-lg-offset-3'>
        <h2>Editar maestro: {{entity.nombreCompleto}} </h2>
        <br>
        {{ form_start(edit_form,{'attr':{'role': 'form'}}) }}
        <div class='form-group'>
            {{ form_label(edit_form.nombre) }}
            {{ form_widget(edit_form.nombre ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.nombre)}}</span>
        </div>

        <div class='form-group'>
            {{ form_label(edit_form.apellidoPaterno) }}
            {{ form_widget(edit_form.apellidoPaterno ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.apellidoPaterno)}}</span>
        </div> 

        <div class='form-group'>
            {{ form_label(edit_form.apellidoMaterno) }}
            {{ form_widget(edit_form.apellidoMaterno ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.apellidoMaterno)}}</span>
        </div>
        <div class='form-group'>
            {{ form_label(edit_form.email) }}
            {{ form_widget(edit_form.email ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.email)}}</span>
        </div>
        <div class='form-group'>
            {{ form_label(edit_form.telefono) }}
            {{ form_widget(edit_form.telefono ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(edit_form.telefono)}}</span>
        </div>
        <br/>
        <div class="col-lg-12">
            {{ form_widget(edit_form.submit, {'label': 'Actualizar maestro' , 'attr': {'class': 'btn btn-primary'}}) }}
            <a class="btn btn-success" href="{{ path('maestros') }}">
                Ver Lista Completa
            </a>
            <button id="eliminaRegistro" class="btn btn-danger">
                Eliminar
            </button>   
        </div>
        {{ form_end(edit_form) }}
        <form id="formEliminar" action="{{ path('maestros_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        </form>
    </div>
    <br>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script>
        (function(){
            $("#eliminaRegistro").on('click',function(){
                $("#formEliminar").submit();
            });
        })();
    </script>
{% endblock %}    

