{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('usuarios')}}"><svg class="glyph stroked male user "><use xlink:href="#stroked-male-user"/></svg></a> Usuarios </li>
	</ol>
{% endblock %}

{% block content -%}
   
        
    
    
    <div class='col-lg-5 col-lg-offset-3'>
        <h2>Agregar nuevo usuario</h2>
        <br>
    {{ form_start(form,{'attr':{'role': 'form'}}) }}
    
    <div class='form-group'>
            {{ form_label(form.nombre) }}
            {{ form_widget(form.nomb re,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.nombre)}}</span>
        </div>

        <div class='form-group'>
            {{ form_label(form.apellido) }}
            {{ form_widget(form.apellido ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.apellido)}}</span>
        </div> 

        <div class='form-group'>
            {{ form_label(form.email) }}
            {{ form_widget(form.email ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.email)}}</span>
        </div>
        <div class='form-group'>
            {{ form_label(form.password) }}
            {{ form_widget(form.password ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.password)}}</span>
        </div>

        <br>
    <div class="col-lg-12">
        {{ form_widget(form.submit, {'label': 'Agregar usuario' , 'attr': {'class': 'btn btn-primary'}}) }}
        <a class="btn btn-danger" href="{{ path('usuarios') }}">
            Ver Lista Completa
        </a>
    </div>            
        {{ form_end(form) }}
        
        
    
    </div>
   

{% endblock %}
