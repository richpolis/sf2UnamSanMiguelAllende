{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('usuarios')}}"><svg class="glyph stroked male user "><use xlink:href="#stroked-male-user"/></svg></a> Usuarios </li>
	</ol>
{% endblock %}

{% block content %}
    
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Usuarios</h2>
        </div>  
    
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Email</th>
                        <th>Fecha creacion</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.nombre }}</td>
                        <td>{{ entity.apellido }}</td>
                        <td>{{ entity.email }}</td>
                        <td>{{ entity.createdAt | date('d-m-Y')  }}</td>
                        <td>
                           <a class="btn btn-primary" href="{{ path('usuarios_show', { 'id': entity.id }) }}">Ver</a>                               
                           <a class="btn btn-info" href="{{ path('usuarios_edit', { 'id': entity.id }) }}">Editar</a>
                           
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                
            </table>
        </div>

    <table class="records_list">
        
       
    </table>

       
        
            <a class="btn btn-success" href="{{ path('usuarios_new') }}">
                Agregar Nuevo
            </a>
        
    
                
     </div>           
    {% endblock %}
