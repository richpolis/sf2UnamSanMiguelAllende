{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block navegacion %}
	<ol class="breadcrumb">
		<li><a href="{{path('homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li><a href="{{path('precios')}}"><svg class="glyph stroked app-window"><use xlink:href="#stroked-app-window"></use></svg></a> Precios </li>
	</ol>
{% endblock %}


{% block content -%}




    <div class='col-lg-5 col-lg-offset-3'>
        <h2>Agregar Nuevo Precio</h2>
        <br>
        {{ form_start(form,{'attr':{'role': 'form'}}) }}

        <div class='form-group'>
            {{ form_label(form.precio) }}
            {{ form_widget(form.precio ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.precio)}}</span>
        </div>
        <div class='form-group'>
            {{ form_label(form.fechaInicio) }}
            {{ form_widget(form.fechaInicio ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.fechaInicio)}}</span>
        </div>
        <div class='form-group'>
            {{ form_label(form.fechaFinal) }}
            {{ form_widget(form.fechaFinal ,{ 'attr': {'class' : 'form-control' }} ) }}
            <span class='text-danger'>{{ form_errors(form.fechaFinal)}}</span>
        </div>
        <br>
        <div class="col-lg-12">
            {{ form_widget(form.submit, {'label': 'Agregar precio' , 'attr': {'class': 'btn btn-primary'}}) }}
            <a class="btn btn-danger" href="{{ path('precios') }}">
                Ver Lista Completa
            </a>
        </div>            
        {{ form_end(form) }}



    </div>


{% endblock %}
