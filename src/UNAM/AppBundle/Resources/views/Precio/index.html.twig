{% extends 'UNAMAppBundle::layout.html.twig' %}

{% block content %}
    
    <div class="col-lg-12">
        <div class="page-header ">
            <h2 class="">Precios</h2>
        </div>  
    
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Precio</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Final</th>
                        <th>Acciones</th>                       
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.precio | number_format(2,".",",")  }}</td>
                        <td>{{ entity.fechaInicio | date('d-m-Y')  }}</td>
                        <td>{{ entity.fechaFinal | date('d-m-Y')  }}</td>
                        <td>
                           <a class="btn btn-primary" href="{{ path('precios_show', { 'id': entity.id }) }}">Ver</a>                               
                           <a class="btn btn-info" href="{{ path('precios_edit', { 'id': entity.id }) }}">Editar</a>
                           
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                
            </table>
        </div>

    <table class="records_list">
        
       
    </table>

       
        
            <a class="btn btn-success" href="{{ path('precios_new') }}">
                Agregar Nuevo
            </a>
        
    
                
     </div>           
    {% endblock %}
